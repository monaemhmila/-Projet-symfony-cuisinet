<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Tableau des Utilisateurs</title>
	</head>
	<body>
		<h1 style="text-align: center; color: red">Cuisinet Services</h1>
		<h2 style="text-align: center">Tableau des Utilisateurs</h2>

		<table border="1">
			<thead>
				<tr>
					<th>ID</th>
					<th>Username</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Email</th>
					<th>Statut</th>
					<th>Role</th>
				</tr>
			</thead>
			<tbody>
				{% for u in users %}
					<tr>
						<td>{{ u.id }}</td>
						<td>{{ u.username }}</td>
						<td>{{ u.nom }}</td>
						<td>{{ u.prenom }}</td>
						<td>{{ u.email }}</td>
						<td>
							{% if u.isBanned == 1 %}
								<span class="badge badge-danger">Banni</span>
							{% else %}
								<span class="badge badge-success">Actif</span>
							{% endif %}

						</td>
						<td>
							{% for role in u.roles %}
								{% if role == "ROLE_USER" %}
									Utilisateur
								{% elseif role == "ROLE_ADMIN" %}
									Administrateur
								{% endif %}
							{% endfor %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</body>
</html>
