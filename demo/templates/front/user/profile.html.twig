{% extends 'base-front2.html.twig' %}


{% block content %}

	<section class="hero-wrap hero-wrap-2" style="background-image: url('/front-office-v2/images/bg_5.jpg');" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row no-gutters slider-text align-items-end justify-content-center">
				<div class="col-md-9 ftco-animate text-center mb-5">
					<h1 class="mb-2 bread">Mon Profile</h1>
					<p class="breadcrumbs">
						<span class="mr-2">
							<a href="index.html">User
								<i class="fa fa-chevron-right"></i>
							</a>
						</span>
						<span>Profile
							<i class="fa fa-chevron-right"></i>
						</span>
					</p>
				</div>
			</div>
		</div>
	</section>

	<section class="innerpage_all_wrap d-flex flex-col " style="margin-top: 5rem; margin-bottom: 5rem;">
		<div class="container">
			<div class="col">
				<h2 class="heading">Vos
					<span>Informations</span>
				</h2>

				<p class="headParagraph"></p>
				<div class="feedbackContact-open formcontact clearfix">
					<div class="form-group">
						<h4 style="display: inline;color: black">Nom d'utilisateur:
						</h4>
						<h4 style="display: inline; color: red;">{{ profile.username }}</h4>
					</div>
					<div class="form-group">
						<h4 style="display: inline;color: black">Nom:
						</h4>
						<h4 style="display: inline; color: red;">{{ profile.nom }}</h4>
					</div>
					<div class="form-group">
						<h4 style="display: inline;color: black">Prenom:
						</h4>
						<h4 style="display: inline; color: red;">{{ profile.prenom }}</h4>
					</div>

					<div class="form-group">
						<h4 style="display: inline;color: black">Email :</h4>
						<h4 style="display: inline; color: red;">{{ profile.email }}</h4>
					</div>
					{% for role in profile.roles %}
						{% if role == 'ROLE_ADMIN' %}
							<div class="form-group">
								<h4 style="display: inline;color: black">Acces :</h4>
								<h4 style="display: inline; color: red;">Admin</h4>
							</div>
						{% endif %}
					{% endfor %}


					{# <a class="btn btn-primary" style="margin-top: 50px" href="{{ path('ModifierProfil',{'id':profile.id}) }}">Modifier mes donn√©es</a> #}

				</div>

			</div>


		</div>
	</div>
</section>{% endblock %}
